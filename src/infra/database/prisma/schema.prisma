generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id Int @id @default(autoincrement())
  email String @unique
  username String @unique
  password String
  created DateTime @default(now())
  updated DateTime @updatedAt
}

model users_profiles {
  id Int @id @default(autoincrement())
  name String @unique
  user_id Int 
  created DateTime @default(now())
}

model urls {
  id Int @id @default(autoincrement())
  id_profile Int 
  name String
  url String
  visited Boolean
  frecuency Int
  updated DateTime @updatedAt
}

model documents {
  id Int @id @default(autoincrement())
  user_id Int
  name String
  updated DateTime @updatedAt
}